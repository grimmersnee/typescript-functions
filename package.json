{
  "name": "typescript-functions",
  "version": "1.0.0",
  "description": "Run typescript in azure functions",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ulrikaugustsson/typescript-functions.git"
  },
  "author": "Ulrik Strid",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "typescript": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.8",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
